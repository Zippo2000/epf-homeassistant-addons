# Example configuration for EPF E-Ink Photo Frame
# 
# IMPORTANT: Copy this file to config.yaml and replace the example values
# with your own settings. Never commit config.yaml to git!
#
# How to use:
# 1. Copy this file: cp config.yaml.example config.yaml
# 2. Edit config.yaml with YOUR values
# 3. Home Assistant will read the local config.yaml

immich:
  # Your Immich server URL
  # IMPORTANT: Use IP address or hostname, NOT "localhost"
  # Example: http://192.168.1.100:2283 or http://immich.example.com:2283
  url: http://192.168.1.100:2283
  
  # Your Immich API key
  # Generate this in Immich: Settings → API Keys → Create API Key
  # Keep this secret! Do NOT share or commit to git!
  api_key: YOUR_API_KEY_HERE
  
  # Name of the album in Immich to use for the frame
  # IMPORTANT: Must match the album name exactly (case-sensitive!)
  album: default_album
  
  # Image rotation angle in degrees
  # Allowed values: 0, 90, 180, 270
  rotation: 270
  
  # Color enhancement / saturation
  # Range: 0.5 - 3.0
  # 1.0 = no enhancement
  # Recommended for E-Ink: 1.2 - 1.5
  enhanced: 1.3
  
  # Contrast adjustment
  # Range: 0.5 - 3.0
  # 1.0 = no adjustment
  # Recommended for E-Ink: 0.8 - 1.2
  contrast: 0.9
  
  # Dithering strength (Atkinson algorithm)
  # Range: 0.0 - 1.0
  # Higher values = more visible dithering
  # Recommended: 0.8
  strength: 0.8
  
  # Display mode - how to fit image to screen
  # Options:
  #   fit  = Preserve aspect ratio, add borders (letterbox)
  #   fill = Crop to fill entire screen
  display_mode: fill
  
  # Image ordering method
  # Options:
  #   random = Show random images from album
  #   newest = Show newest images first
  image_order: random
  
  # Sleep period settings (when NOT to update)
  # Example: Go to sleep at 23:00 (11 PM), wake at 6:00 (6 AM)
  # No updates will be displayed during this period
  sleep_start_hour: 23
  sleep_start_minute: 0
  sleep_end_hour: 6
  sleep_end_minute: 0
  
  # Wakeup interval in minutes
  # How often to check for new images
  # Example: 60 = check every hour
  # Note: Longer intervals save battery
  wakeup_interval: 60
